<% include ./partials/header %>

<div class="ui main text container">
    <div class="ui huge header">RESTful Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
          <% blogs.forEach(function(blog){ %>
            <div class="item">
            <div class="image"><img src="<%= blog.image %>"></div>
            <div class="content">
                <a class="header" href="/blogs/<%= blog._id %>"><%=blog.title%></a>
                <div class="meta">
                    <span class="date"><%= blog.created.toLocaleDateString("en-US") %></span>
                </div>
                <div class="description">
                    <%- blog.body.substring(0, 100) %> ...
                </div>
                <div class="extra">
                    <a class="ui mini floated basic grey button" href="/blogs/<%= blog._id %>">
                    Read More
                    </a>
                </div>
            </div>
        </div>
        <% }) %>  
        </div>
    </div>
</div>



<% include ./partials/footer %>